$('.answer-errors').html('');
<% if @answer.errors.present? %>
    <%  @answer.errors.full_messages.each do |message| %>
        $('.answer-errors').append('<%= j message %>');
    <% end %>
<% else %>
    $('.answers').append('<%= j render @answer %>');
    $('.answers-count').html('Answers count: ' + '<%= @question.answers.count %>');
    $('#answer_body').val('');
<% end %>