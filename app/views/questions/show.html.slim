h1= @question.title
h2= @question.body
p.answers-count
  | Answers count:
  = @question.answers.count
.answers
  = render @question.answers
.answer-errors
= form_for [@question, @question.answers.new], remote: true do |f|
  =   f.label :body, 'Your answer'
  =   f.text_field :body
  =   f.submit 'Send answer'
- if current_user && current_user.author_of?(@question)
  p = link_to 'Delete', @question, method: :delete